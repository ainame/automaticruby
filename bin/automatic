root_dir = File.expand_path("..", File.dirname(__FILE__))
$:.unshift root_dir + '/lib'
require 'automatic'
require 'optparse'

recipe_path = ""
parser = OptionParser.new { |parser|
  parser.banner = "Usage: automatic [options] arg"
  parser.version = Automatic.const_get(:VERSION)
  parser.separator "options:"
  parser.on('-c', '--config FILE', String,
            "recipe YAML file"){|c| recipe_path = c}
  parser.on('-h', '--help', "show this message") { 
    puts parser
    exit
  }
}

begin
  parser.parse!
  puts "Loading #{recipe_path}" if recipe_path.empty?
rescue OptionParser::ParseError => err
  $stderr.puts err.message
  $stderr.puts parser.help
  exit 1
end

Automatic.run(:recipe   => recipe_path,
              :root_dir => root_dir)
